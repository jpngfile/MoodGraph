extends layout

block content
  h1=title

  form(method='POST' action='')
    div.form-group
      label(for='username') Username: 
      input#username.form-control(type='text', name='username', required='true')
      br
      label(for='password') Password: 
      input#password.form-control(type='text' name='password', required='true')
    button.btn.btn-primary(type='submit') Enter
  if errors
    ul
      for error in errors
        li!=error.msg
